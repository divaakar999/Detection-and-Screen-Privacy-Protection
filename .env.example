# Environment Configuration Template
# Copy this file to .env and fill in your settings

# System Settings
DEBUG_MODE=False
LOG_LEVEL=INFO

# Detection Settings
FACE_DETECTION_CONFIDENCE=0.5
MIN_FACES_FOR_ALERT=2
GAZE_THRESHOLD=0.4

# Performance
DETECTION_LATENCY_MS=200
FRAME_SKIP=1
WEBCAM_WIDTH=640
WEBCAM_HEIGHT=480
WEBCAM_FPS=30

# Blur Settings
BLUR_INTENSITY=25
BLUR_OVERLAY_OPACITY=0.85
BLUR_TRANSITION_SPEED=100

# Model
FACE_DETECTION_MODEL=mobilenetv2
USE_GPU=True

# Feature Flags
ENABLE_GAZE_ESTIMATION=true
ENABLE_HEAD_POSE=true
ENABLE_CHROME_EXTENSION=true
ENABLE_EVENT_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true

# Logging
LOG_ENABLE_FILE=true
LOG_ENABLE_CONSOLE=true
LOG_MAX_FILE_SIZE=10485760

# Chrome Extension
EXTENSION_PORT=8000
EXTENSION_DEBUG=False

# Privacy
BLUR_SCREEN_ON_DETECTION=true
LOG_DETECTIONS=true
RETENTION_DAYS=30
